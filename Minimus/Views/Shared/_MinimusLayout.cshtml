<DOCTYPE html>
    <html>
    <head>
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width" />
        @{ string keywords = ViewBag.Keywords == null ? "Стандартные ключевые слова" : ViewBag.Keywords;
            <meta name="keywords" content=keywords />
        }
        @{ string description = ViewBag.Description == null ? "Стандартные ключевые слова" : ViewBag.Description;
            <meta name="description" content=description />
        }
        <meta charset="utf-8">
        <meta name="format-detection" content="telephone=no">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <!-- Fonts-->
        @Styles.Render("~/Content/assets/fonts/fontawesome/font-awesome.min.css")
        @Styles.Render("~/Content/assets/fonts/pe-icon/pe-icon.css")
        <!-- Vendors-->
        @Styles.Render("~/Content/assets/vendors/bootstrap/grid.css")
        @Styles.Render("~/Content/assets/vendors/magnific-popup/magnific-popup.min.css")
        @Styles.Render("~/Content/assets/vendors/swiper/swiper.css")
        <!-- App & fonts-->
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700|Open+Sans:400,700">
        @Styles.Render("~/Content/assets/css/main.css")
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <![endif]-->
    </head>
    <body>

        <div class="page-wrap" id="root">
            <!-- header -->
            <header class="header header--fixed">
                <div class="header__inner">
                    <div class="header__logo"><a href="~/Home/Index"><img src="~/Content/assets/img/logo.png" alt="" style="width: 122px;" /></a></div>
                    <div class="navbar-toggle" id="fs-button">
                        <div class="navbar-icon"><span></span></div>
                    </div>
                </div>

                <!-- fullscreenmenu__module -->
                <div class="fullscreenmenu__module" trigger="#fs-button">

                    <!-- overlay-menu -->
                    <nav class="overlay-menu">

                        <!--  -->
                        <ul class="wil-menu-list">
                            <li>
                                <a href="~/Home/Index">Home</a>
                            </li>
                            <li>
                                <a href="~/Home/About">About</a>
                            </li>
                            <li class="current-menu-item">
                                <a href="~/Home/Work">Work</a>
                            </li>
                            <li>
                                <a href="~/Home/Blog">Blog</a>
                            </li>
                            <li>
                                <a href="~/Home/Contact">Contact</a>
                            </li>
                        </ul><!--  -->

                    </nav><!-- End / overlay-menu -->

                </div><!-- End / fullscreenmenu__module -->

            </header>
            <!-- End / header -->

            <main>
                @RenderBody()
            </main>

            <!-- footer -->
            <div class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-lg-6 ">
                            <p class="footer__coppy">2018 &copy; Copyright <a href="http://awe7.com/">Awe7</a>. All rights Reserved.</p>
                        </div>
                        <div class="col-md-6 col-lg-6 ">
                            <div class="footer__social">

                                <!-- social-icon -->
                                <a class="social-icon" href="#">
                                    <i class="social-icon__icon fa fa-facebook"></i>
                                </a><!-- End / social-icon -->
                                <!-- social-icon -->
                                <a class="social-icon" href="#">
                                    <i class="social-icon__icon fa fa-twitter"></i>
                                </a><!-- End / social-icon -->
                                <!-- social-icon -->
                                <a class="social-icon" href="#">
                                    <i class="social-icon__icon fa fa-linkedin"></i>
                                </a><!-- End / social-icon -->
                                <!-- social-icon -->
                                <a class="social-icon" href="#">
                                    <i class="social-icon__icon fa fa-behance"></i>
                                </a><!-- End / social-icon -->
                                <!-- social-icon -->
                                <a class="social-icon" href="#">
                                    <i class="social-icon__icon fa fa-vimeo"></i>
                                </a><!-- End / social-icon -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End / footer -->
        </div>

        <!-- Vendors-->
        <script type="text/javascript" src="~/Content/assets/vendors/jquery/jquery.min.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/imagesloaded/imagesloaded.pkgd.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/isotope-layout/isotope.pkgd.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/jquery-one-page/jquery.nav.min.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/jquery.easing/jquery.easing.min.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/jquery.matchHeight/jquery.matchHeight.min.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/magnific-popup/jquery.magnific-popup.min.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/masonry-layout/masonry.pkgd.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/jquery.waypoints/jquery.waypoints.min.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/swiper/swiper.jquery.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/menu/menu.js"></script>
        <script type="text/javascript" src="~/Content/assets/vendors/typed/typed.min.js"></script>
        <!-- App-->
        <script type="text/javascript" src="~/Content/assets/js/main.js"></script>
    </body>
</html>
